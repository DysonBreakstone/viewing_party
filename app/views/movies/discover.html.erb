<div id="top-movies">
  <%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", method: :get %>
</div>

<div id="search-movies">
  <%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit "Find Movies" %>
  <% end %>
</div>