<div id="top-movies">
  <%= button_to "Find Top Rated Movies", "/users/#{current_user.id}/movies", method: :get, params: {q: "top20rated"} %>
</div>
<br>
<div id="search-movies">
  <%= form_with url: "/users/#{current_user.id}/movies", method: :get, local: true do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit "Find Movies" %>
  <% end %>
</div>